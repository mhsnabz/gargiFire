<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    >


    <RelativeLayout
        android:id="@+id/relLayViewHolder"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/number"
            ></TextView>
        <RelativeLayout
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@id/number"
            android:layout_alignParentTop="true"
            android:id="@+id/relLay_image"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/loading"
                android:layout_centerInParent="true"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/profileImage"

                />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/relLay_image"
            android:fontFamily="@font/nunito_sans_semibold"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:textSize="14dp"
            android:text="name"

            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/verified"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/verified"
            android:layout_toEndOf="@id/age"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/name"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_sans_semibold"
            />
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@id/relLay_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linLay1"
            android:layout_below="@id/name"
            >

            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"


                android:fontFamily="@font/nunito_sans_semibold"
                />
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/star"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/linLay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linLay2"
            android:layout_below="@id/name"
            android:layout_marginTop="2dp"

            >

            <TextView
                android:id="@+id/seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"


                android:fontFamily="@font/nunito_sans_semibold"
                />
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/seen"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/new_reg"
            android:visibility="gone"
            android:layout_below="@+id/linLay1"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/relLay_image"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeni Ãœye "
                android:textSize="8sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                ></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/locationRel"
            android:layout_toEndOf="@id/new_reg"
            android:layout_below="@id/linLay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/locaiton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                ></TextView>

        </RelativeLayout>
        <ImageView
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:id="@+id/konum"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/konum_2"
            android:layout_below="@id/linLay1"
            android:layout_toEndOf="@id/relLay_image"
            />
        <TextView
            android:fontFamily="@font/nunito_sans_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/konum"
            android:layout_below="@id/linLay1"
            android:layout_marginLeft="2dp"
            android:textSize="10dp"

            />
        <ImageView
            android:id="@+id/rigth"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/rigth_arrow"
            />
        <ImageView
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/rigth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/emoji"

            android:src="@drawable/in_love_emoji"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/emoji"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/horoscope"

            android:src="@drawable/kova"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            />
    </RelativeLayout>
</com.google.android.material.circularreveal.cardview.CircularRevealCardView>