<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.EditActivity">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </androidx.viewpager.widget.ViewPager>
                <com.github.clans.fab.FloatingActionButton
                    android:onClick="back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:fab_size="mini"
                    android:id="@+id/back"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="#66000000"
                    app:fab_shadowRadius="4dp"
                    app:fab_shadowXOffset="1dp"
                    app:fab_shadowYOffset="3dp"
                    app:fab_colorNormal="@color/white"
                    android:src="@drawable/back"
                    />
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/dots"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    ></LinearLayout>
                <com.github.clans.fab.FloatingActionButton
                    android:layout_below="@id/pager_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:fab_size="mini"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="#66000000"
                    app:fab_shadowRadius="4dp"
                    app:fab_shadowXOffset="1dp"
                    app:fab_shadowYOffset="3dp"
                    android:src="@drawable/edit_2"
                    android:scaleType="centerInside"
                    android:id="@+id/edit"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                >

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name"
                                />
                            <TextView
                                android:id="@+id/age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/name"
                                android:layout_marginLeft="2dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="@color/black"

                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/point"
                                android:layout_below="@id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="10dp"
                                android:textSize="14dp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="@color/black"
                                />
                            <ImageView

                                android:id="@+id/star"
                                android:layout_below="@id/name"
                                android:layout_marginLeft="8dp"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="3dp"
                                android:layout_toEndOf="@id/point"
                                android:src="@drawable/star"
                                />
                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:text="@string/yukleniyor"
                            android:id="@+id/location"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/point"
                            android:layout_marginLeft="10dp"

                            android:fontFamily="@font/nunito_sans_semibold"
                            android:textColor="@android:color/darker_gray"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/kova"
                        android:id="@+id/horoscope"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                >
                <RelativeLayout
                    android:id="@+id/relLay_job_school"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="14dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/school"
                        android:id="@+id/job"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLay_about"
                    android:layout_below="@id/relLay_job_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/about_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/hakkinda"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:layout_marginRight="60dp"
                        android:textAlignment="textStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/about_tv"
                        android:id="@+id/about"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="4dp"

                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="14dp"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relLay_about"
                    android:layout_width="match_parent"
                    android:id="@+id/relLay_social"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/social_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="16dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/sosyal_medya_hesaplarim"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textColor="@color/colorAccent"
                        android:layout_marginTop="8dp"

                        />
                    <LinearLayout

                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/social_tv"
                        android:id="@+id/lin_social"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/insta"
                            android:layout_margin="8dp"
                            android:id="@+id/instagram"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/twitter"
                            android:layout_margin="8dp"
                            android:id="@+id/twit"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"

                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/facebook"
                            android:id="@+id/facebook"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/snapchat"
                            android:id="@+id/snap"

                            />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>