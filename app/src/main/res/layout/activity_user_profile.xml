<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.UserProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </androidx.viewpager.widget.ViewPager>
                <com.github.clans.fab.FloatingActionButton
                    android:onClick="back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:fab_size="mini"
                    android:id="@+id/back"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="#66000000"
                    app:fab_shadowRadius="4dp"
                    app:fab_shadowXOffset="1dp"
                    app:fab_shadowYOffset="3dp"
                    app:fab_colorNormal="@color/white"
                    android:src="@drawable/back"
                    />
                <LinearLayout
                    android:id="@+id/dots"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    ></LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/pager_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/deneme"
                    >

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/name"
                                    />
                                <TextView
                                    android:id="@+id/age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/name"
                                    android:layout_marginLeft="2dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:textColor="@color/black"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:id="@+id/point"
                                    android:layout_below="@id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:textColor="@color/black"
                                    />
                                <ImageView

                                    android:id="@+id/star"
                                    android:layout_below="@id/name"
                                    android:layout_marginLeft="8dp"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_toEndOf="@id/point"
                                    android:src="@drawable/star"
                                    />
                            </LinearLayout>

                            <TextView

                                android:id="@+id/location"
                                android:textSize="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/point"
                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="@android:color/darker_gray"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/kova"
                            android:id="@+id/horoscope"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            />
                    </LinearLayout>


                    <!-- <TextView
                         android:text="mahsun abuzetioÄŸlu"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:fontFamily="@font/nunito_sans_semibold"
                         android:textStyle="bold"
                         android:layout_marginLeft="10dp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/name"
                         />
                     <TextView
                         android:text="27"
                         android:id="@+id/age"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_toEndOf="@id/name"
                         android:layout_marginLeft="2dp"
                         android:textStyle="bold"
                         android:fontFamily="@font/nunito_sans_semibold"
                         android:textColor="@color/black"

                         />-->


                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                >
                <RelativeLayout
                    android:id="@+id/relLay_job_school"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/school"
                        android:textSize="14dp"
                        android:fontFamily="@font/nunito_sans_semibold"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/school"
                        android:id="@+id/job"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:id="@+id/relLay_about"
                    android:layout_below="@id/relLay_job_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/about_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/hakkinda"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:layout_marginRight="60dp"
                        android:textAlignment="textStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/about_tv"
                        android:id="@+id/about"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="14dp"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/relLay_about"
                    android:id="@+id/relLay_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/rate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/degerlendir"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textColor="@color/colorAccent"
                        />
                    <com.willy.ratingbar.ScaleRatingBar
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/rate"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:srb_numStars="5"

                        app:srb_rating="0"
                        app:srb_starWidth="40dp"
                        app:srb_starHeight="40dp"
                        app:srb_starPadding="8dp"
                        app:srb_stepSize="1"
                        app:srb_isIndicator="false"
                        app:srb_clickable="true"
                        app:srb_scrollable="false"
                        app:srb_clearRatingEnabled="true"
                        android:layout_below="@id/rate_tv">
                        ></com.willy.ratingbar.ScaleRatingBar>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"

                    android:layout_below="@id/relLay_rate"
                    android:layout_width="match_parent"
                    android:id="@+id/relLay_social"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/social_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="16dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/sosyal_medya_hesaplarim"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textColor="@color/colorAccent"
                        android:layout_marginTop="8dp"

                        />
                    <LinearLayout

                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/social_tv"
                        android:id="@+id/lin_social"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/insta"
                            android:layout_margin="8dp"
                            android:id="@+id/instagram"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/twitter"
                            android:layout_margin="8dp"
                            android:id="@+id/twit"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"

                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/facebook"
                            android:id="@+id/facebook"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/snapchat"
                            android:id="@+id/snapchat"

                            />
                    </LinearLayout>

                </RelativeLayout>
               <Button
                   android:onClick="report"
                   android:layout_centerHorizontal="true"
                   android:paddingEnd="16dp"
                   android:paddingStart="16dp"
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:layout_below="@id/relLay_social"
                   android:textAlignment="center"
                   android:text="@string/sikayet_et"
                   android:layout_margin="20dp"
                   android:textSize="18dp"
                   android:fontFamily="@font/nunito_sans_semibold"
                   android:textStyle="bold"
                   android:textColor="@color/colorAccent"
                   android:background="@drawable/report_button"
                   ></Button>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>