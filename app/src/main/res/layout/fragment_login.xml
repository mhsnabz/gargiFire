<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Log_Sign.LoginFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:met_floatingLabel="normal"
                android:hint="@string/e_mail_adresiniz"
                android:textAlignment="center"
                android:textSize="14dp"
                app:met_floatingLabelTextColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/nunito_sans_semibold"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_below="@id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:met_floatingLabel="normal"
                android:hint="@string/sifre"
                android:textAlignment="center"
                android:textSize="14dp"
                app:met_floatingLabelTextColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:inputType="textPassword"
                android:fontFamily="@font/nunito_sans_semibold"
                />
            <Button
                android:layout_below="@id/password"
                android:id="@+id/login_click"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_back"
                android:text="@string/giris_yap"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#fff" />

            <com.facebook.login.widget.LoginButton
                android:layout_below="@id/login_click"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_button"
                ></com.facebook.login.widget.LoginButton>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_button"
                android:id="@+id/forgetPassword"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="@string/sifremi_unuttum"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="10dp"
                ></TextView>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>