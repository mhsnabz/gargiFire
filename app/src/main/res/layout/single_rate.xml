<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">
    <RelativeLayout
        android:id="@+id/relLayViewHolder"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/number"
            ></TextView>
        <RelativeLayout
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@id/number"
            android:layout_alignParentTop="true"
            android:id="@+id/relLay_image"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/loading"
                android:layout_centerInParent="true"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/upload_place_holder"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/relLay_image"
            android:fontFamily="@font/nunito_sans_semibold"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:textSize="14dp"
            android:text="name"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratesText"

            android:layout_below="@id/name"
            android:layout_toEndOf="@id/relLay_image"
            android:layout_toStartOf="@id/chat"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="12dp"
            ></TextView>

        <ImageView
            android:id="@+id/rigth"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/rigth_arrow"
            />

        <ImageView
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/chat"

            android:src="@drawable/chat_icon_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            />
    </RelativeLayout>
</com.google.android.material.circularreveal.cardview.CircularRevealCardView>