<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="57dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp"
            >
            <RelativeLayout
                android:id="@+id/editLayout"
                android:layout_margin="8dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.github.clans.fab.FloatingActionButton
                        android:layout_alignParentEnd="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:fab_size="mini"
                        android:src="@drawable/edit"
                        android:id="@+id/edit"

                        app:fab_showShadow="true"
                        app:fab_shadowColor="#66000000"
                        app:fab_shadowRadius="4dp"
                        app:fab_shadowXOffset="1dp"
                        app:fab_shadowYOffset="3dp"
                        app:fab_colorNormal="@color/white"
                        />
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit"
                        android:text="@string/profilini_duzenle"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.github.clans.fab.FloatingActionButton
                        android:layout_centerHorizontal="true"
                        android:layout_width="40dp"
                        app:fab_size="mini"
                        app:fab_showShadow="true"
                        app:fab_shadowColor="#66000000"
                        app:fab_shadowRadius="4dp"
                        app:fab_shadowXOffset="1dp"
                        app:fab_shadowYOffset="3dp"
                        app:fab_colorNormal="@color/white"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"

                        android:src="@drawable/setting"
                        android:id="@+id/setting"
                        app:borderWidth="0dp"


                        />
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting"
                        android:text="@string/ayarlar"
                        android:textSize="10sp"

                        android:layout_marginTop="4dp"
                        />
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/relProfileImage"
                android:layout_below="@id/editLayout"
                android:layout_width="250dp"
                android:background="@drawable/background_image"
                android:layout_height="250dp">
                <com.github.ybq.android.spinkit.SpinKitView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    style="@style/SpinKitView.WanderingCubes"
                    app:SpinKit_Color="@color/black"
                    android:id="@+id/progres"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/profileImage"
                    android:layout_width="150dp"
                    android:src="@drawable/upload_place_holder"
                    android:layout_height="150dp"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_below="@id/relProfileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relName"
                >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@id/name"
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relJob"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                >
                <TextView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    />
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@id/point"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:src="@drawable/star"
                    android:layout_marginLeft="6dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relName"
                android:id="@+id/relJob"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/school"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textAlignment="center"
                    />
                <TextView
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/school"
                    android:id="@+id/job"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relLatStatic"
                android:layout_marginTop="50dp"
                android:layout_below="@id/relJob"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:weightSum="30"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="10"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView

                                android:layout_centerHorizontal="true"
                                android:id="@+id/viewsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/tv_1"
                                android:textSize="12sp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textStyle="italic"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/viewsCount"
                                android:text="@string/goruntulenme"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/rate_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/tv_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textStyle="italic"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rate_count"
                                android:text="@string/oy_verenler"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView

                                android:layout_centerHorizontal="true"
                                android:id="@+id/tvviewer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/tv_3"
                                android:textSize="12sp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textStyle="italic"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvviewer"
                                android:text="@string/kisi_goruntuledi"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_below="@id/relLatStatic">

            </RelativeLayout>
        </RelativeLayout>


    </ScrollView>
    <RelativeLayout
        android:id="@+id/relLayNavi"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        >
        <include layout="@layout/bottom_nav_layout"  ></include>
    </RelativeLayout>
</RelativeLayout>